#!/bin/bash

FILENAME_H=$(date +%Y%m%d%H).json
FILENAME_D=$(date +%Y%m%d).json
mkdir -p ./data

rpcCommands=( getpeerinfo getmininginfo getconnectioncount getmempoolinfo getblockcount getnetworkinfo getnettotals )

for command in "${rpcCommands[@]}"
do
	echo $command
	mkdir -p ./data/$command/hourly
	mkdir -p ./data/$command/daily
	/opt/coins/nodes/myriad/bin/myriadcoin-cli -rpcuser=rpc -rpcpassword=rpc -rpcport=8043 $command > ./data/$command/hourly/$FILENAME_H
        cp ./data/$command/hourly/$FILENAME_H ./data/$command/daily/$FILENAME_D
	cp ./data/$command/hourly/$FILENAME_H ./data/$command/latest.json
done
